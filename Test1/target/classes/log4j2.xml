<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	 <Properties>
		<Property name="basepath">./logs</Property>
	</Properties>	
  <Appenders>
  	<RollingFile name="RollingFile" fileName="${basepath}/Testlog.log"  filePattern="${basepath}/Testlog-%d{yyyy-MM-dd}-%i.log" >
		<PatternLayout pattern="%d{dd/MMM/yyyy HH:mm:ss,SSS}- %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		<SizeBasedTriggeringPolicy size="500" />
	</RollingFile>
  
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  
  <Loggers>
 	<!-- <Logger name="package1.log4jlogger" level="trace" additivity="false">
      	<AppenderRef ref="RollingFile"/>
    </Logger> -->
    <Root level="trace">
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>